<%= render "license/shared/sidebar" %>
<div class="license">
	<div class="aimContainer">
		<h4 class="grey-text darken-1">목표 자격증</h4>
		<div class="row">
			<div class="col s3">
				<div class="aim-card card-panel center-align valign-wrapper">
					<a class="btn-aim-card btn-floating waves-effect waves-light valign transparent modal-trigger" href="#addAim">
						<i class="aim-icon material-icons">add</i>    
					</a>
				</div>
			</div>
			<div class="col s3">
				<div class="aim-card card blue-grey darken-1 valign-wrapper">
					<div class="card-content white-text center-align valign">
						<span class="card-title"><span class="license-name">전기 기사</span> 시험까지</span>
						<p>
						<span class="d-day">50</span>일 남았습니다!
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="likeContainer">
		<hr>
		<h4 class="grey-text darken-1">관심 자격증</h4>
		<hr>
		<div class="row">
			<div class="col s3">
				<div class="aim-card card-panel center-align valign-wrapper">
					<a class="btn-aim-card btn-floating waves-effect waves-light valign transparent modal-trigger" href="#addLike">
						<i class="aim-icon material-icons">add</i>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>



<!-----------모달 ------------>

