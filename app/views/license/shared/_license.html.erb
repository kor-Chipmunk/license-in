<% type = :aim if type.nil? %>
<% add = :false if add.nil? %>
<% if type == :aim %>
	<% if add == :true %>
		<div class="col s3">
			<div class="aim-card card-panel center-align valign-wrapper">
				<a class="btn-aim-card btn-floating waves-effect waves-light valign transparent modal-trigger" href="#addAim">
					<i class="aim-icon material-icons">add</i>    
				</a>
			</div>
		</div>
	<% else %>
		<div class="col s3">
			<div class="aim-card card blue-grey darken-1 valign-wrapper">
				<a class="delete" href="/license/1/<%= license.id %>" data-method="delete" data-confirm="제거해도 괜찮습니까?"><i class="material-icons">delete</i></a>
				<div class="card-content white-text center-align valign">
					<span class="card-title">
						<span class="license-name">
							<%= license.name %>
						</span>
						&nbsp;시험까지
					</span>
					<p>
					<span class="d-day">50</span>일 남았습니다!
					</p>
				</div>
			</div>
		</div>
	<% end %>
<% elsif type == :like %>
	<% if add == :true %>
		<div class="col s3">
			<div class="aim-card card-panel center-align valign-wrapper">
				<a class="btn-aim-card btn-floating waves-effect waves-light valign transparent modal-trigger" href="#addLike">
					<i class="aim-icon material-icons">add</i>    
				</a>
			</div>
		</div>
	<% else %>
		<div class="col s3">
			<div class="aim-card card blue-grey darken-1 valign-wrapper">
				<div class="card-content white-text center-align valign">
					<span class="card-title"><span class="license-name">전기 기사</span> 시험까지</span>
					<p>
					<span class="d-day">50</span>일 남았습니다!
					</p>
				</div>
			</div>
		</div>
	<% end %>
<% elsif type == :got %>
	<% if add == :true %>
		<div class="col s3">
			<div class="aim-card card-panel center-align valign-wrapper">
				<a class="btn-aim-card btn-floating waves-effect waves-light valign transparent modal-trigger" href="#addGot">
					<i class="aim-icon material-icons">add</i>    
				</a>
			</div>
		</div>
	<% else %>
		<div class="col s3">
			<div class="aim-card card blue-grey darken-1 valign-wrapper">
				<div class="card-content white-text center-align valign">
					<span class="card-title"><span class="license-name">전기 기사</span> 시험까지</span>
					<p>
					<span class="d-day">50</span>일 남았습니다!
					</p>
				</div>
			</div>
		</div>
	<% end %>
<% else %>

<% end %>