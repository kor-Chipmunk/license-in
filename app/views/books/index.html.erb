<div class="container">
 <div class="card card-book">
    <div class="card book-image waves-effect waves-block waves-light">
        <a class="btn btn-book btn-floating waves-effect">
        <i class="icon icon-book material-icons">add</i></a>
      <!---img class="activator activator-book" src="/assets/logo.png"--->
    </div>
    
    <div class="card-content content-book">
      <span class="card-title activator grey-text text-darken-4">제목<i class="material-icons right">more_vert</i></span>
      <p><a href="#">링크입니다</a></p>
    </div>
    <div class="card-reveal reveal-book">
      <span class="card-title grey-text text-darken-4">제목<i class="material-icons right">close</i></span>
      <p>가격과 내용</p>
    </div>
  </div>
  
<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>

  
</div> 
         

