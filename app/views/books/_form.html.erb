<%= form_for(book, multipart: true) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, :required => true %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, :required => true %>
  </div>

  <div class="field">
    <%= f.file_field :pic, :required => true, :class => "btn btn-book-pic" %>
  </div>

  <div class="actions">
    <%= f.submit "글 작성", :class => "btn btn-book" %>
  </div>
<% end %>
